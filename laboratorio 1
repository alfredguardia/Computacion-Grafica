#include <windows.h>
#include <C:\GLUT\include\GL\glut.h>
#include <stdlib.h>
struct casa{
	int x;
	int y;
	int altura;
	int ancho;
};


void init(void)
{
	glClearColor(1.0,1.0,1.0,0.0);
	glMatrixMode(GL_PROJECTION);
	gluOrtho2D(0.0,200.0,0.0,200.0);
}

void recta2d(void)
{
    glClear(GL_COLOR_BUFFER_BIT);
	glColor3f(0.0,0.4,0.2);
	glBegin(GL_LINES);
	glVertex2i(180,15);
	glVertex2i(10,145);
	glEnd();
	glFlush();
}


void poligono(void)
{
	glClear(GL_COLOR_BUFFER_BIT);
	glColor3f(0.0,0.4,0.2);
	//glRotated(20, 0,0,1);
	//glTranslated(50,100,0);
	glScaled(2,2,0);
	glLineWidth(3);
	glBegin(GL_LINES);
	glVertex2i(30,30);
    glVertex2i(90,30);
    glVertex2i(30,30);
    glVertex2i(30,60);
    glVertex2i(90,30);
    glVertex2i(90,60);
    glVertex2i(30,60);
    glVertex2i(60,75);
    glVertex2i(90,60);
    glVertex2i(60,75);
	glEnd();
	glFlush();
}

int main(int argc, char** argv)
{
	glutInit(&argc,argv);
	glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
	glutInitWindowPosition(50,100);
	glutInitWindowSize(600,500);
	glutCreateWindow("Poligono 2D");
	init();
	glutDisplayFunc(poligono);
	//glutDisplayFunc(recta2d);
	glutMainLoop();
}
